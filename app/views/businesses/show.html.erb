<div class='row height-40'>
  <span class='col-sm-1'><%= link_to image_tag('back.jpg'), category_path(@business.category) %></span>
  <div id='business-tag'>
    <%= image_tag @business.category.image.url(:thumb), size: '80x30' %>
    <div id= 'business-name'><%= @business.category.name.humanize %></div>
  </div>
</div>

<div class='container col-sm-10 col-sm-offset-1 top-pad-50'>
  <div class='row top-pad'>
    <div id='business-tag'>
      <span class='h1'>
        <%= @business.name.humanize %>
      </span>
    </div>
  </div>

  <div class='jumbotron'>
    <div class='row'>
      <div class='col-sm-5'>
        <div id="carousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
         <!--  <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
          </ol> -->
          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <!-- <div class="item active"> -->
              <!-- <img src="http://placehold.it/1200x315" alt="..."> -->
              <!-- <div class="carousel-caption"> -->
                  <!-- <h3>Caption Text</h3> -->
              <!-- </div> -->
            <!-- </div> -->
            <% @business.images.each_with_index do |img, i| %>
              <div class="item <%= active_class(i) %>">
                <%= image_tag img.image.url, size: '150x150' %>
              </div>
            <% end %>
          </div>
          <!-- Controls -->
          <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <!-- <span class="glyphicon glyphicon-chevron-left"></span> -->
          </a>
          <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <!-- <span class="glyphicon glyphicon-chevron-right"></span> -->
          </a>
        </div> <!-- Carousel -->
      </div>
      <div class='col-sm-7'>
        <div class='table'>
          <div class='row top-pad'>
            <span class='col-sm-2'><%= image_tag 'home1.png' %></span>
            <span class='col-sm-10 text-height-20'><%= @business.address_sentence %></span>
          </div>
          <% if @business.address.area.present? %>
            <div class='row top-pad'>
              <span class='col-sm-2'>
                <%=link_to image_tag('marker.jpg'), "http://maps.google.com/?" + @business.address.area.to_query('q'), :target => "_blank" %></span>
              <span class='col-sm-10 text-height-20'>
                  <%= @business.address.area %>
              </span>
            </div>
          <% end %>
          <div class='row top-pad'>
            <span class='col-sm-2'><%= image_tag 'phone.jpg' %></span>
            <span class='col-sm-10 text-height-20'><%= @business.all_phone_numbers %></span>
          </div>
          <div class='row top-pad'>
            <div class='row'>
              <span class='col-sm-4  col-sm-offset-4 text-height-20'>Rating</span>
            </div>
            <div class='col-sm-4 col-sm-offset-4 text text-height-20'>★★★★★</div></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= image_tag 'bullet.jpg' %><span class='text-height-20'>Working Hours</span>
  <div class='jumbotron table'>
    <% @business.time_slots.each do |time_slot| %>
      <div class='row'>
        <div class='col-sm-5'>
          <%= time_slot.week_days.humanize %>
        </div>
        <div class='col-sm-6'>
          <%= time_slot.from.to_s(:time) %> TO <%= time_slot.to.to_s(:time) %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @business.description.present? %>
    <%= image_tag 'bullet.jpg' %><span class='text-height-20'>Description</span>
    <div class='jumbotron'>
      <%= @business.description %>
    </div>
  <% end %>

  <%= image_tag 'bullet.jpg' %><span class='text-height-20'>Online Presence</span>
  <div class='jumbotron'>
    <div class='row'>
      <%= @business.website.info if @business.website.present? %>
    </div>
    <div class='row'>
      <%= @business.all_emails if @business.emails.present? %>
    </div>
  </div>

  <%= image_tag 'bullet.jpg' %><span class='text-height-20'>Rate & Review </span>
  <div class='jumbotron'>
  </div>

</div>

