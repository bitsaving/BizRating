<!DOCTYPE html>
<html>
<head>
  <title>BizRating</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
        <%= link_to "Just Call", :root, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
        <div class="log_user">
          <% unless user_signed_in? %>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#sign_up">Sign_Up</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#login"> Login</button>
          <% else %>
            <%#= button_tag 'Logout', class: "btn btn-primary", data: {toggle: "modal", target: "#logout"} %>
        </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", :root %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Account <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <% if user_signed_in? %>
              <li>
                <%= link_to "LogOut", :destroy_user_session, method: :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to "Log In", :new_user_session %>
              </li>
              <li>
                <%= link_to "Sign Up", :new_user_registration %>
              </li>
              <% end %>
            <!-- <li>
              <a href="#">Something else here</a>
            </li>
            <li class="divider"></li>
            <li>
              <a href="#">Separated link</a>
            </li> -->
          <% end %>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->

</nav>
<div class='container'>
  <div class="modal fade" id="sign_up" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Sign Up</h4>
      </div>
      <div class="modal-body container-fluid">
        
        <% resource_name ||= :user %>
        <% resource ||= User.new %>
          <%= form_for(resource, as: :user, url: registration_path(:user), html: {class: 'form-horizontal'}) do |f| %>
            <%#= devise_error_messages! %>

            <div class="field form-group">
              <%= f.label :email, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.email_field :email, class: 'form-control', autofocus: true %></div>
            </div>

            <div class="field form-group">
              <%= f.label :password, class: 'control-label col-sm-3' %>
              <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation,  'Re Password', class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>
            </div>

            <div class="field form-group">
              <%= f.label :first_name, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.text_field :first_name, class: 'form-control' %></div>
            </div>

            <div class="field form-group">
              <%= f.label :last_name, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.text_field :last_name, class: 'form-control' %></div>
            </div>

            <div class="field form-group">
              <%= f.label :address, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.text_field :address, class: 'form-control' %></div>
            </div>

            <div class="field form-group">
              <%= f.label :state, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.text_field :state, class: 'form-control' %></div>
            </div>

            <div class="field form-group">
              <%= f.label :pin_code, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.text_field :pin_code, class: 'form-control' %></div>
            </div>

            <div class="actions modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <%= f.submit "Sign up", class: "btn btn-primary"%>
            </div>
          <% end %>

      </div>
    </div>
  </div>
</div>

<div class='container'>
  <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Login</h4>
      </div>
      <div class="modal-body container-fluid">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
            <%#= devise_error_messages! %>

            <div class="field form-group">
              <%= f.label :email, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.email_field :email, class: 'form-control', autofocus: true %></div>
            </div>

            <div class="field form-group">
              <%= f.label :password, class: 'control-label col-sm-3' %>
              <div class="col-sm-6">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>
            </div>
<!-- 
          <%# if devise_mapping.rememberable? -%>
            <div class="field form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class='checkbox'>
                  <%#= f.check_box :remember_me %>
                  <%#= f.label :remember_me %>
                </div>
              </div>
            </div>
          <%# end %> -->

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <% if user_signed_in? %>
    <% if current_user.is_admin? %>
      Admin
    <% else %>
      Customer
    <% end %>
  <% else %>
    LogOut
  <% end %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>
</body>
</html>
