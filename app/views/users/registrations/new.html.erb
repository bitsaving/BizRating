<div class="row col-sm-offset-2 col-sm-10">
  <h2>Sign Up</h2>
</div>
<div class='container'>
  <%= form_for(resource, as: resource_name, url: :user_registration, html: {class: 'form form-horizontal'}) do |f| %>

      <div class="row field form-group control-group <%= registration_error_class(:email) %>">
        <%= f.label :email, class: 'control-label col-sm-3' %>
        <div class="col-sm-6">
        <%= f.text_field :email, class: 'form-control', autofocus: true %>
       </div>
       <div class='col-sm-3'><%= resource.errors[:email].to_sentence %></div>
      </div>

      <div class="row field form-group control-group <%= registration_error_class(:name) %>">
        <%= f.label :name, class: 'control-label col-sm-3' %>
        <div class="col-sm-6">
        <%= f.text_field :name, class: 'form-control', autofocus: true %>
       </div>
       <div class='col-sm-3'><%= resource.errors[:name].to_sentence %></div>
      </div>


      <div class="row field form-group control-group <%= registration_error_class(:password) %>">
        <%= f.label :password, class: 'control-label col-sm-3' %>
        <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <br />
        <div class='col-sm-3'><%= resource.errors[:password].to_sentence %></div>
      </div>

      <div class="row field form-group control-group <%= registration_error_class(:password_confirmation) %>">
        <%= f.label :password_confirmation, class: 'control-label col-sm-3' %>
        <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>
        <div class='col-sm-3'><%= resource.errors[:password_confirmation].to_sentence %></div>
      </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %>
                Remember me
              </label>
          </div>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit "Sign Up", class: 'btn btn-default' %>
      <%= f.submit "Reset", class: 'btn btn-danger', type: 'reset' %>
      </div>
    </div>

  <% end %>
</div>
<div class="col-sm-offset-3 col-sm-9">
  <%= render "devise/shared/links" %>
</div>
