<%= link_to 'New Business', :new_step1_businesses, class: 'btn btn-primary add-business' %>

<table class="table table-striped">
  <tbody class="sortable">
    <% @businesses.each do |business| %>
      <!-- <tr id="<%=business.id%>">
        <td><%#= image_tag business.image.url(:thumb) %></td> -->
        <td><%= business.name %></td>
        <td class="btn-just">
          <button type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#edit_business_<%= business.id %>">Edit</button>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      business_path(business), :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
    </ul>
  </tbody>
</table>

<%= 'There are no businesses vailable, please add businesses'  if @businesses.length == 0 %>
<% content_for :head do javascript_include_tag :businesses end %>