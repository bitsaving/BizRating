  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>

  <%= f.fields_for :website do |web| %>
    <div class="control-group">
      <%= web.label :details, 'website', :class => 'control-label' %>
      <div class="controls">
        <%= web.text_field :details, :class => 'form-control' %>
      </div>
    </div>
  <% end %>

  <%= f.fields_for :phone_numbers do |pn| %>
    <div class="control-group phone">
      <%= pn.label :details, 'Phone Number', :class => 'control-label' %>
      <div class="controls">
        <%= pn.text_field :details, :class => 'form-control' %>
      </div>
    </div>
     <%= pn.link_to_remove "Remove this task" %>
  <% end %>
  <p><%= f.link_to_add "Add a phone number", :phone_numbers %></p>

  <%= f.fields_for :emails do |e| %>
    <div class="control-group email">
      <%= e.label :details, 'Email', :class => 'control-label' %>
      <div class="controls">
        <%= e.text_field :details, :class => 'form-control' %>
      </div>
    </div>
    <%= e.link_to_remove "Remove this task" %>
  <% end %>
  <p><%= f.link_to_add "Add a emails", :emails %></p>
