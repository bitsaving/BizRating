<div class="modal-body container-fluid">
  <%= form_for @category, url: admin_categories_path, html: {class: 'form-horizontal'} do |f| %>
      <div class="field form-group <%= @category.errors[:name].empty? ? '' : 'has-error' %>">
        <%= f.label :name, 'Name*', class: 'control-label col-sm-3' %>
        <div class="col-sm-6">
        <%= f.text_field :name, class: 'form-control', autofocus: true %></div>
      <span><%= @category.errors[:name].to_sentence %></span>
      </div>
      <div class="field form-group <%= @category.errors[:name].empty? ? '' : 'has-error' %>">
        <%= f.label :image, 'Image*', class: 'control-label col-sm-3' %>
        <div class='col-sm-6'>
          <%= f.file_field :image, class: 'form-control col-sm-3' %>
        </div>
        <span><%= @category.errors[:image].to_sentence %></span>

      </div>
       <div class="actions modal-footer">
        <%= f.submit "Add", class: "btn btn-primary btn-lg", id: 'new_category' %>
        <%= f.submit "Reset", class: "btn btn-warning btn-lg", id: 'new_category', type: 'reset' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          admin_categories_path, :class => 'btn btn-danger btn-lg' %>
      </div>
    <% end %>
</div>
